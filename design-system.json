{
    "name": "DevResources Design System",
    "version": "1.0.0",
    "description": "Minimalist developer-friendly design system with black/gray/yellow palette based on shadcn",
    
    "colors": {
      "primary": {
        "DEFAULT": "#FACC15",
        "light": "#FDE047",
        "dark": "#EAB308",
        "alpha": {
          "10": "rgba(250, 204, 21, 0.1)",
          "20": "rgba(250, 204, 21, 0.2)",
          "30": "rgba(250, 204, 21, 0.3)"
        }
      },
      "neutral": {
        "50": "#FAFAFA",
        "100": "#F5F5F5",
        "200": "#E5E5E5",
        "300": "#D4D4D4",
        "400": "#A3A3A3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717",
        "950": "#0A0A0A"
      },
      "semantic": {
        "success": {
          "DEFAULT": "#22C55E",
          "alpha": {
            "10": "rgba(34, 197, 94, 0.1)",
            "20": "rgba(34, 197, 94, 0.2)"
          }
        },
        "info": {
          "DEFAULT": "#3B82F6",
          "alpha": {
            "10": "rgba(59, 130, 246, 0.1)",
            "20": "rgba(59, 130, 246, 0.2)"
          }
        },
        "warning": {
          "DEFAULT": "#F59E0B",
          "alpha": {
            "10": "rgba(245, 158, 11, 0.1)",
            "20": "rgba(245, 158, 11, 0.2)"
          }
        },
        "danger": {
          "DEFAULT": "#EF4444",
          "alpha": {
            "10": "rgba(239, 68, 68, 0.1)",
            "20": "rgba(239, 68, 68, 0.2)"
          }
        },
        "purple": {
          "DEFAULT": "#A855F7",
          "alpha": {
            "10": "rgba(168, 85, 247, 0.1)",
            "20": "rgba(168, 85, 247, 0.2)"
          }
        }
      }
    },
  
    "typography": {
      "fontFamily": {
        "sans": ["Inter", "SF Pro Display", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
        "mono": ["JetBrains Mono", "Fira Code", "SF Mono", "Cascadia Code", "Consolas", "Monaco", "monospace"],
        "display": ["Cabinet Grotesk", "Inter", "system-ui", "sans-serif"]
      },
      "fontImports": {
        "google": [
          "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap",
          "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap"
        ],
        "instructions": "For Cabinet Grotesk, purchase from https://cabinetgrotesk.com/ or use Inter as fallback"
      },
      "fontSize": {
        "xs": {
          "size": "0.75rem",
          "lineHeight": "1rem",
          "letterSpacing": "0"
        },
        "sm": {
          "size": "0.875rem",
          "lineHeight": "1.25rem",
          "letterSpacing": "0"
        },
        "base": {
          "size": "1rem",
          "lineHeight": "1.5rem",
          "letterSpacing": "0"
        },
        "lg": {
          "size": "1.125rem",
          "lineHeight": "1.75rem",
          "letterSpacing": "-0.01em"
        },
        "xl": {
          "size": "1.25rem",
          "lineHeight": "1.75rem",
          "letterSpacing": "-0.01em"
        },
        "2xl": {
          "size": "1.5rem",
          "lineHeight": "2rem",
          "letterSpacing": "-0.02em"
        },
        "3xl": {
          "size": "1.875rem",
          "lineHeight": "2.25rem",
          "letterSpacing": "-0.02em"
        },
        "4xl": {
          "size": "2.25rem",
          "lineHeight": "2.5rem",
          "letterSpacing": "-0.02em"
        }
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },
  
    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
  
    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "DEFAULT": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "full": "9999px"
    },
  
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "DEFAULT": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "glow": "0 0 20px rgba(250, 204, 21, 0.15)"
    },
  
    "components": {
      "button": {
        "primary": {
          "default": {
            "backgroundColor": "#FACC15",
            "color": "#0A0A0A",
            "fontWeight": 500,
            "padding": "0.625rem 1.25rem",
            "borderRadius": "0.5rem",
            "transition": "all 0.2s ease"
          },
          "hover": {
            "backgroundColor": "#FDE047"
          },
          "active": {
            "backgroundColor": "#EAB308"
          },
          "disabled": {
            "opacity": 0.5,
            "cursor": "not-allowed"
          }
        },
        "secondary": {
          "default": {
            "backgroundColor": "#262626",
            "color": "#F5F5F5",
            "fontWeight": 500,
            "padding": "0.625rem 1.25rem",
            "borderRadius": "0.5rem",
            "transition": "all 0.2s ease"
          },
          "hover": {
            "backgroundColor": "#404040"
          }
        },
        "outline": {
          "default": {
            "backgroundColor": "transparent",
            "color": "#F5F5F5",
            "fontWeight": 500,
            "padding": "0.625rem 1.25rem",
            "borderRadius": "0.5rem",
            "border": "1px solid #404040",
            "transition": "all 0.2s ease"
          },
          "hover": {
            "borderColor": "#FACC15",
            "color": "#FACC15"
          }
        },
        "outlinePrimary": {
          "default": {
            "backgroundColor": "transparent",
            "color": "#FACC15",
            "fontWeight": 500,
            "padding": "0.625rem 1.25rem",
            "borderRadius": "0.5rem",
            "border": "1px solid #FACC15",
            "transition": "all 0.2s ease"
          },
          "hover": {
            "backgroundColor": "#FACC15",
            "color": "#0A0A0A"
          }
        },
        "ghost": {
          "default": {
            "backgroundColor": "transparent",
            "color": "#F5F5F5",
            "fontWeight": 500,
            "padding": "0.625rem 1.25rem",
            "borderRadius": "0.5rem",
            "transition": "all 0.2s ease"
          },
          "hover": {
            "backgroundColor": "#262626"
          }
        },
        "ghostPrimary": {
          "default": {
            "backgroundColor": "transparent",
            "color": "#FACC15",
            "fontWeight": 500,
            "padding": "0.625rem 1.25rem",
            "borderRadius": "0.5rem",
            "transition": "all 0.2s ease"
          },
          "hover": {
            "backgroundColor": "rgba(250, 204, 21, 0.1)"
          }
        }
      },
  
      "input": {
        "default": {
          "backgroundColor": "#171717",
          "color": "#F5F5F5",
          "padding": "0.625rem 1rem",
          "borderRadius": "0.5rem",
          "border": "1px solid #262626",
          "transition": "all 0.2s ease",
          "fontSize": "0.875rem"
        },
        "placeholder": {
          "color": "#737373"
        },
        "focus": {
          "borderColor": "#FACC15",
          "outline": "none",
          "boxShadow": "0 0 0 2px rgba(250, 204, 21, 0.2)"
        },
        "disabled": {
          "opacity": 0.5,
          "cursor": "not-allowed"
        }
      },
  
      "card": {
        "default": {
          "backgroundColor": "#171717",
          "border": "1px solid #262626",
          "borderRadius": "0.75rem",
          "padding": "1.5rem",
          "transition": "all 0.2s ease"
        },
        "hover": {
          "borderColor": "#404040",
          "boxShadow": "0 0 20px rgba(250, 204, 21, 0.05)"
        },
        "featured": {
          "border": "1px solid rgba(250, 204, 21, 0.2)"
        },
        "featuredHover": {
          "borderColor": "rgba(250, 204, 21, 0.4)"
        }
      },
  
      "badge": {
        "primary": {
          "backgroundColor": "rgba(250, 204, 21, 0.1)",
          "color": "#FACC15",
          "border": "1px solid rgba(250, 204, 21, 0.2)",
          "padding": "0.25rem 0.75rem",
          "borderRadius": "9999px",
          "fontSize": "0.75rem",
          "fontWeight": 500
        },
        "secondary": {
          "backgroundColor": "#262626",
          "color": "#D4D4D4",
          "padding": "0.25rem 0.75rem",
          "borderRadius": "9999px",
          "fontSize": "0.75rem",
          "fontWeight": 500
        },
        "success": {
          "backgroundColor": "rgba(34, 197, 94, 0.1)",
          "color": "#22C55E",
          "border": "1px solid rgba(34, 197, 94, 0.2)",
          "padding": "0.25rem 0.75rem",
          "borderRadius": "9999px",
          "fontSize": "0.75rem",
          "fontWeight": 500
        },
        "info": {
          "backgroundColor": "rgba(59, 130, 246, 0.1)",
          "color": "#3B82F6",
          "border": "1px solid rgba(59, 130, 246, 0.2)",
          "padding": "0.25rem 0.75rem",
          "borderRadius": "9999px",
          "fontSize": "0.75rem",
          "fontWeight": 500
        },
        "purple": {
          "backgroundColor": "rgba(168, 85, 247, 0.1)",
          "color": "#A855F7",
          "border": "1px solid rgba(168, 85, 247, 0.2)",
          "padding": "0.25rem 0.75rem",
          "borderRadius": "9999px",
          "fontSize": "0.75rem",
          "fontWeight": 500
        }
      },
  
      "filterPill": {
        "default": {
          "backgroundColor": "#171717",
          "color": "#D4D4D4",
          "border": "1px solid #262626",
          "padding": "0.5rem 1rem",
          "borderRadius": "0.5rem",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "transition": "all 0.2s ease"
        },
        "hover": {
          "backgroundColor": "#262626"
        },
        "active": {
          "backgroundColor": "#FACC15",
          "color": "#0A0A0A",
          "border": "none"
        }
      },
  
      "tab": {
        "container": {
          "backgroundColor": "#171717",
          "padding": "0.25rem",
          "borderRadius": "0.5rem",
          "display": "inline-flex",
          "gap": "0.25rem"
        },
        "default": {
          "padding": "0.625rem 1.5rem",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "color": "#A3A3A3",
          "borderRadius": "0.375rem",
          "transition": "all 0.2s ease"
        },
        "hover": {
          "color": "#F5F5F5"
        },
        "active": {
          "backgroundColor": "#FACC15",
          "color": "#0A0A0A"
        }
      }
    },
  
    "layout": {
      "container": {
        "maxWidth": "80rem",
        "margin": "0 auto",
        "padding": "0 1.5rem"
      },
      "grid": {
        "mobile": {
          "columns": 1,
          "gap": "1rem"
        },
        "tablet": {
          "columns": 2,
          "gap": "1.5rem"
        },
        "desktop": {
          "columns": 3,
          "gap": "1.5rem"
        }
      }
    },
  
    "animations": {
      "transition": {
        "fast": "0.15s ease",
        "DEFAULT": "0.2s ease",
        "slow": "0.3s ease"
      }
    },
  
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
  
    "usage": {
      "colorMapping": {
        "background": {
          "primary": "neutral-950",
          "secondary": "neutral-900",
          "tertiary": "neutral-800"
        },
        "text": {
          "primary": "neutral-100",
          "secondary": "neutral-400",
          "tertiary": "neutral-500",
          "accent": "primary (yellow-400)"
        },
        "border": {
          "default": "neutral-800",
          "hover": "neutral-700",
          "focus": "primary (yellow-400)"
        }
      },
      "levelColors": {
        "beginner": "success (green)",
        "intermediate": "info (blue)",
        "advanced": "purple"
      },
      "typeColors": {
        "video": "primary (yellow)",
        "article": "primary (yellow)",
        "course": "primary (yellow)"
      }
    }
  }